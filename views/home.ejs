    <div class="root">
      <div class="sidenav">
        <div class="logoDiv">
          <a href="/home">
            <img src="/public/icons/credit-64.png" alt="I">
            <span>AZN Shoppers</span>
          </a>
        </div>
        <div class="menuDiv">
          <ul class="nav">
            <li class="navItem"><a href="/home">
              <span>
                <img src="/public/icons/icons8-home-48.png" alt="I">
              </span>
                <span>
                  Home
                </span>
            </a></li>
            <li class="navItem"><a href="/credit">
              <span>
                <img src="/public/icons/icons8-money-48.png" alt="I">
              </span>
                <span>
                  Credits
                </span>
            </a>
          </li>
          <li class="navItem"><a href="/code">
            <span>
              <img src="/public/icons/icons8-link-48.png" alt="I">
            </span>
              <span>
                Affiliate
              </span>
          </a>
        </li>
        <li class="navItem"><a href="/home/signout">
          <span>
            <img src="/public/icons/icons8-sign-out-50.png" alt="I">
          </span>
            <span>
              Sign Out
            </span>
        </a>
      </li>
          </ul>
        </div>
      </div>
      <div class="contentWrapper">
        <div class="idDivWrapper">
          <div class="idDiv">
            <p>Home</p>
          </div>
        </div>
        
        <div class="summary">
          <div class='summaryDiv'id="creditSummary">
            <span id="summaryTitle">Credits</span>
            <span id="summaryValue"><%= profileData.totalCredits %></span>
          </div>
          <div class='summaryDiv'id="spendSummary">
            <span id="summaryTitle">Spend</span>
            <span id="summaryValue">$<%= profileData.yourCreds.reduce((sum, obj) => sum + (obj.product.price || 0), 0) %></span>
          </div>
          <div class='summaryDiv'id="creditSummary">
            <span id="summaryTitle">Earnings</span>
            <span id="summaryValue">$645</span>
          </div>
        </div>
        <div class="content">
          <div class="recentDiv">
              <h3>Recent Transactions</h3>
              <table>
                <thead>
                <tr>
                  <th>Date</th>
                  <th>Time</th>
                  <th>Price</th>
                  <th>Credits</th>
                </tr>
              </thead>
              <tbody>
                <% profileData.yourCreds.forEach(credit => { %>
                    <tr>
                        <td><%= new Date(credit.stamp).toLocaleDateString() %></td>
                        <td><%= new Date(credit.stamp).toLocaleTimeString() %></td>
                        <!-- <td id='nameRow'><%= credit.product.name.split("-")[0] %></td> -->
                        <td><%= credit.product.price %></td>
                        <td><%= credit.value %></td>
                  </tr>
              <% }); %>
                
              </tbody>
              </table>
          </div>
        </div>
      </div>
    </div>
