    }
    .navItem span{
      margin: 5px;
      min-width: 30px;
    }
    li.navItem:hover {
      background-color: #E0EEEE;
      color: white;
    }
    .navItem img{
      width: 24px;
      height: 24px;
    }


    .contentWrapper{
      background-color: #DAD9DE;
      /* padding: 20px; */
      padding-left: 30px;
      padding-right: 30px;
      /* padding-right: 30px;
      padding-top: 80px; */
    }
    .idDivWrapper{
