  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      min-height: 100vh;
      margin: 0;
      padding: 0;
    }
    .root{
      margin: 0;
      padding: 0;
      display: grid;
      grid-template-columns: 20% 80%;
      width: 100%;
    }

    .sidenav {
      height: 100vh;
      background-color: #FFFFFF; /* Green */
      /* padding-top: 20px; */
    }
    .logoDiv{
      height:80px;
      border-bottom: 1px solid grey;
      width: 100%;
