      font-size: 20px;
    }
    .summary{
      display: flex;
      align-items: center;
      /* justify-content: center; */
      width:100%;
      background-color: DAD9DE;
      margin-bottom: 20px;
    }
    .summaryDiv{
      height:60px;
      margin-right: 20px;
      border-radius: 5px;
      width: 15%;
      background-color: white;
      padding: 5px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
    }
    #summaryTitle{
      font-size: 16px;
      font-weight: 700;
      color: #DAD9DE;
    }
    #summaryValue{
      font-size: 20px;
      font-weight: 800;
    }
    .summaryLogo{
      height: 40px;
      width: 40px;
      border-radius: 50%;
      background-color: #DAD9DE;
      margin: 5px;
    }
    .content{
      background-color: white;
      border-radius: 5px;
      height: 500px;
      padding: 20px;
      padding-top: 10px;
    }
    .recentDiv h3{
      font-size: 15px;
    }

    .sidenav a {
      /* padding: 8px 16px; */
      text-decoration: none;
      color: black;
      display: block;
      width: 100%;
      /* border: #202124 1px solid; */
      height: 50px;
      display: flex;
      justify-content: flex-start;
      align-items: center;
    }
    .sidenav a#logo {

    }

    
    .topnav{
        display: none;
        background-color: #4CAF50;
    }

    .miniContent{
      display: none;
    }
    table {
      width: 90%;
      border-collapse: collapse;
      margin-bottom: 50px;
    }

    th, td {
      border: 1px solid black;
      /* padding: 8px; */
      text-align: left;
      
    }
    td{
      /* margin-top: 20px;
      margin-bottom: 20px; */
    }

    th {
      /* background-color: #f2f2f2; */
      border-bottom: 1px solid grey;
      color: grey;
    }
    .miniContent#home{
      display: block;
    }



    @media (max-width: 900px) {
    .sidenav {
        width: 220px;
    }
    }

